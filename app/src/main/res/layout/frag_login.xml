<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
 <com.example.quchwe.qqspacedemo.util.Widget.CirecleImage
     android:id="@+id/iv_head_image"
     android:layout_width="@dimen/x180"
     android:layout_height="@dimen/y180"
     android:layout_gravity="center_horizontal"
     android:layout_marginTop="@dimen/y300"
     android:src="@mipmap/quchaowei"/>
 <RelativeLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_marginTop="@dimen/y80"
     android:layout_marginStart="@dimen/x48"
     android:layout_marginEnd="@dimen/x48"
     android:orientation="horizontal">
  <TextView
      android:id="@+id/tv_userId"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textColor="@android:color/black"
      android:layout_centerVertical="true"
      android:textSize="16sp"
      android:text="账号"/>
  <EditText
      android:id="@+id/et_userId"
      android:layout_width="match_parent"
      android:layout_toRightOf="@+id/tv_userId"
      android:textSize="16sp"
      android:hint="请输入账号"
      android:singleLine="true"
      android:numeric="integer"

      android:layout_height="wrap_content"
      android:background="@null"
      android:layout_marginLeft="@dimen/x25"/>
 </RelativeLayout>
 <View
     android:layout_width="match_parent"
     android:background="@color/g2"
     android:layout_marginStart="@dimen/x48"
     android:layout_marginEnd="@dimen/x48"
     android:layout_marginTop="@dimen/y25"
     android:layout_height="@dimen/y1"/>

 <RelativeLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_marginTop="@dimen/y60"
     android:layout_marginStart="@dimen/x48"
     android:layout_marginEnd="@dimen/x48"
     android:orientation="horizontal">
  <TextView
      android:id="@+id/tv_password"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textColor="@android:color/black"
      android:layout_centerVertical="true"
      android:textSize="16sp"
      android:text="密码"/>

  <EditText
      android:id="@+id/et_password"
      android:layout_width="match_parent"
      android:textSize="16sp"
      android:layout_height="wrap_content"
      android:layout_toRightOf="@+id/tv_password"
      android:background="@null"
      android:hint="请输入密码"
      android:singleLine="true"
      android:password="true"
      android:layout_centerVertical="true"
      android:layout_marginLeft="@dimen/x25"
     />
 </RelativeLayout>

 <View
     android:layout_width="match_parent"
     android:background="@color/g2"
     android:layout_marginStart="@dimen/x48"
     android:layout_marginEnd="@dimen/x48"
     android:layout_marginTop="@dimen/y25"
     android:layout_height="@dimen/y1"/>
 <Button
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:id="@+id/btn_login"
     android:background="@drawable/buttonstyle_green1"
     android:textSize="16sp"
     android:layout_marginStart="@dimen/x48"
     android:layout_marginEnd="@dimen/x48"
     android:layout_marginTop="@dimen/y25"
     android:textColor="@android:color/white"
     android:text="登录"
     />
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/x48">
    <CheckBox
        android:id="@+id/ck_remember"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textColor="@color/blue4"
        android:text="记住密码"/>

 <Button
     android:id="@+id/btn_signUp"
     android:textSize="12sp"
     android:text="注册"
     android:layout_alignParentRight="true"
     android:textColor="@color/blue4"
     android:background="@android:color/transparent"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content" />
</RelativeLayout>
</LinearLayout>